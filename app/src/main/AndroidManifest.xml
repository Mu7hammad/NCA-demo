<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nca_demo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Screens.Register"
            android:exported="false" />
        <activity
            android:name=".Screens.Login"
            android:exported="false" />

        <activity android:name=".Screens.Enrollment" />
        <activity android:name=".Screens.ContactUs" />
        <activity android:name=".Screens.Fees" />
        <activity android:name=".Screens.GPA" />
        <activity android:name=".Screens.CoursePreview" />
        <activity android:name=".Screens.Event" />
        <activity android:name=".Screens.Results" />
        <activity android:name=".Screens.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>