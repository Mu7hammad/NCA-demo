<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:elevation="0dp"
                android:layout_height="wrap_content"
                android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/contact_us"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/default_gray"
                    android:fontFamily="@font/cairo_bold"/>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo_bold"
            android:layout_marginTop="20dp"
            android:text="Scan QR code"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cis_qr"
            android:layout_marginTop="15dp"
            android:background="@drawable/box_decoration"
            android:padding="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo_bold"
            android:layout_marginTop="40dp"
            android:text="Call us"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_x_x_large"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@android:color/black"
            android:text="19622"/>

            <ImageButton
                android:id="@+id/call_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_round_call_24"
                app:tint="?attr/colorPrimary" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo_bold"
            android:layout_marginTop="40dp"
            android:text="Social media"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/facebook_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_icon"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/whatsapp_btn"
                android:layout_width="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="40dp"
                android:src="@drawable/whatsapp_icon"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/youtube_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/youtube_icon"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>